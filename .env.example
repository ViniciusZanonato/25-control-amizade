# Configurações do Sistema NeuroLearn - Template
# Copie este arquivo para .env e preencha com suas configurações reais

# Chave secreta do Flask (gere uma chave forte)
SECRET_KEY=insira_aqui_uma_chave_secreta_forte

# API Key do Google Gemini (obtenha em https://makersuite.google.com/app/apikey)
GEMINI_API_KEY=insira_aqui_sua_api_key_do_gemini

# Configurações do Banco de Dados
DATABASE_URL=sqlite:///sistema_educacional.db

# Configurações de Debug (sempre False em produção)
FLASK_DEBUG=False
FLASK_ENV=production

# Configurações de Segurança
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Rate Limiting
RATE_LIMIT_STORAGE_URL=memory://

